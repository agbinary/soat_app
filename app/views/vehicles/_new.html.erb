<%= f.hidden_field :license_plate %>
<div class=row>
  <div class="col-md-6">
    <div class="form-group">
      <%= f.label :license_plate %>
      <%= f.text_field :license_plate, autofocus: true, class: "form-control license-plate-field" %>
      <%= content_tag :div, nil, id: "url_license_plate", data: {url: instantiate_vehicle_path} %>
    </div>
  </div>
  <div class="col-md-6">
    <div class="form-group">
      <%= f.label :vehicle_class_id %>
      <%= f.collection_select :vehicle_class_id, VehicleClass.all, :id, :description, { prompt: "Seleccionar" }, { class: "form-control vehicle-class-select" } %>
      <%= content_tag :div, nil, id: "url_vehicle_class", data: {url: subtype_by_vehicle_classes_path} %>
    </div>
  </div>
  <div class="col-md-6">
    <div class="form-group">
      <label for="subtype-label" class="hide subtype-label">Subtipo</label>
      <%= f.text_field :subtype, autofocus: true, class: "form-control hide subtype-field" %>
    </div>
  </div>
  <div class="col-md-6">
    <div class="form-group">
      <label for="age-label" class="hide age-label">Edad</label>
      <%= f.text_field :age, autofocus: true, class: "form-control hide age-field" %>
    </div>
  </div>
</div>
